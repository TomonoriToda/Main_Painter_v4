<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1244dp"
        android:layout_height="900dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851"
        app:srcCompat="@drawable/title_haikei" />

    <Button
        android:id="@+id/ars_button"
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:background="@drawable/top_image1"
        android:text="ARS"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ARS"
        android:layout_width="26dp"
        android:layout_height="109dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="-15sp"
        android:text="ARS"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="248dp"
        android:layout_height="252dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/itarusukun" />

    <Button
        android:id="@+id/button_qr"
        android:layout_width="209dp"
        android:layout_height="112dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/itusared"
        app:layout_constraintEnd_toStartOf="@+id/button_map"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="221dp"
        android:layout_height="110dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/s1usablue"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/button_paint" />

    <Button
        android:id="@+id/button_paint"
        android:layout_width="230dp"
        android:layout_height="110dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/wusakiiro"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/button_arsinfo" />

    <Button
        android:id="@+id/button_arsinfo"
        android:layout_width="230dp"
        android:layout_height="110dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/gbusagreen"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center"
        android:text="QR読み取り"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center"
        android:text="学内マップ"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="231dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center"
        android:text="お絵描きApp"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="230dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center"
        android:text="アルス情報"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_web"
        android:layout_width="36dp"
        android:layout_height="354dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ng_image_button"
        android:lineSpacingExtra="-5sp"
        android:text="→お絵描きギャラリ→"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_web2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView46"
        android:layout_width="397dp"
        android:layout_height="263dp"
        android:layout_marginStart="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fukidasi" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:lineSpacingExtra="-30sp"
        android:text="ようこそ"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="265dp"
        android:layout_height="64dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="80dp"
        android:text="アルスへ!!"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_web2"
        android:layout_width="235dp"
        android:layout_height="344dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/paint_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_回答状況"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ng_image_button"
        android:text="回答状況確認"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button_web"
        app:layout_constraintTop_toBottomOf="@+id/imageView46" />

    <ImageView
        android:id="@+id/imageView52"
        android:layout_width="134dp"
        android:layout_height="192dp"
        android:layout_marginEnd="176dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/button_web"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:srcCompat="@drawable/game" />

    <ImageView
        android:id="@+id/imageView54"
        android:layout_width="162dp"
        android:layout_height="208dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:saveEnabled="true"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:srcCompat="@drawable/iryou" />

</android.support.constraint.ConstraintLayout>