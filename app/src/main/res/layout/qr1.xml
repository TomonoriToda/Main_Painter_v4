<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_問題"
        android:layout_width="772dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ans_1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="124dp"
        android:text="1"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_問題" />

    <Button
        android:id="@+id/ans_2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="124dp"
        android:text="2"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/textView_回答1"
        app:layout_constraintTop_toBottomOf="@+id/textView_問題" />

    <Button
        android:id="@+id/ans_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="3"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_1"
        app:layout_constraintVertical_bias="0.672" />

    <Button
        android:id="@+id/ans_4"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="84dp"
        android:text="4"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/textView_回答3"
        app:layout_constraintTop_toBottomOf="@+id/ans_2" />

    <TextView
        android:id="@+id/textView_回答1"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/ans_1"
        app:layout_constraintTop_toBottomOf="@+id/textView_問題" />

    <TextView
        android:id="@+id/textView_回答2"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="172dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toEndOf="@+id/ans_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_回答3"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="99dp"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ans_3"
        app:layout_constraintTop_toBottomOf="@+id/textView_回答1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_回答4"
        android:layout_width="160dp"
        android:layout_height="63dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ans_4"
        app:layout_constraintTop_toBottomOf="@+id/textView_回答2"
        app:layout_constraintVertical_bias="0.909" />

</android.support.constraint.ConstraintLayout>